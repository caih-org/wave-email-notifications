<extension 
    name="Notifiy"
    thumbnailUrl="http://wave-email-notifications.appspot.com/favicon.png"
    description="Receive email and iphone notifications when a wave is updated. More information at"> 
    <author name="CAIH"/> 
    <menuHook location="newwavemenu" text="New wave with notifications" 
      iconUrl="http://wave-email-notifications.appspot.com/favicon.png">
        <createNewWave>
            <participant id="wave-email-notifications@appspot.com" />
        </createNewWave>
    </menuHook>
    <menuHook location="toolbar" text="Add notifications to this wave." 
      iconUrl="http://wave-email-notifications.appspot.com/favicon.png">
        <addParticipants>
            <participant id="wave-email-notifications@appspot.com" />
        </addParticipants>
    </menuHook>
</extension> 

