<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs title="Notifiy" height="30">
    <Require feature="wave" />
    <Require feature="locked-domain" />
  </ModulePrefs>
  <Content type="html">
    <![CDATA[
        <style type="text/css"> 
            .border {
                font-size: small;
                padding: 5px;
                border: 1px solid #EEE;
                border-top-color: #CCC;
                background: #EEE;
                border-radius: 6px;
                -moz-border-radius: 6px;
                -webkit-border-radius: 6px;
            }

            .border img {
                vertical-align: text-bottom;
                cursor: pointer;
                width: 15px;
                height: 15px;
            }
        </style>
        <div class="border">
            <img id="notify" onclick="toggle()"> Notify me about updates to this wave
        </div>
        <script type="text/javascript">

            var URL = "http://wave-email-notifications.appspot.com/proc";
            var img = document.getElementById("notify");

            function urlencode(string) {
                return escape(string).replace(new RegExp( "\\+", "g"), "%2B")
            }

            function toggle(notify) {
                var state = wave.getState();
                var rand = Math.random()
                var participant = urlencode(wave.getViewer().getId());
                var waveId = urlencode(state.get("waveId"));
                img.src = URL + "?participant=" + participant + "&waveId=" + waveId + "&toggle=true" + "&" + rand;
            }

            function stateUpdated() {
                var state = wave.getState();
                var rand = Math.random();
                var participant = urlencode(wave.getViewer().getId());
                var waveId = urlencode(state.get("waveId"));
                img.src = URL + "?participant=" + participant + "&waveId=" + waveId + "&" + rand;
            }

            function init() {
                if (wave && wave.isInWaveContainer()) {
                    wave.setStateCallback(stateUpdated)
                }
            }

            gadgets.util.registerOnLoadHandler(init);

        </script>
    ]]>
  </Content>
</Module>